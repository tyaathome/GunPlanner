<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/bg_odd"
        android:clickable="true">

        <com.example.trungie.gunplanner.ui.myview.MyProgressAnimation
            android:id="@+id/myprogress"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_start_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/myprogress"
                android:text="@string/start"
                android:textColor="@color/text_default"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/tv_finish_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/myprogress"
                android:layout_marginTop="20dp"
                android:text="@string/finish"
                android:textColor="@color/text_default"
                android:textSize="20dp"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_tasks"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/tasks"
        android:textColor="@color/text_default"
        android:textSize="30dp"
        android:background="@drawable/bg_even"
        android:clickable="true"/>

    <TextView
        android:id="@+id/tv_backlog"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/backlog"
        android:textColor="@color/text_default"
        android:textSize="30dp"
        android:background="@drawable/bg_odd"/>

</LinearLayout>